{
  "name": "@carbon/toolkit",
  "version": "0.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": []
  },
  "license": "Apache-2.0",
  "scripts": {
    "ci-check": "yarn format:diff && yarn lint && yarn test --runInBand",
    "clean": "lerna clean --yes && rm -rf node_modules",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "lerna": "lerna",
    "lint": "eslint packages",
    "precommit": "lint-staged",
    "format": "prettier --write \"**/*.{scss,css,js}\"",
    "format:diff": "prettier --list-different \"**/*.{scss,css,js}\"",
    "test": "jest"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.56",
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "babel-core": "^7.0.0-0",
    "babel-jest": "^23.4.2",
    "eslint": "^5.3.0",
    "fs-extra": "^7.0.0",
    "husky": "^0.14.3",
    "jest": "^23.4.2",
    "lerna": "^2.11.0",
    "lint-staged": "^7.1.3",
    "prettier": "^1.14.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.md": [
      "yarn format",
      "git add"
    ],
    "*.js": [
      "yarn format",
      "yarn lint",
      "git add"
    ]
  },
  "prettier": {
    "jsxBracketSameLine": true,
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "extends": ["./packages/eslint-config-toolkit/index.js"]
  },
  "jest": {
    "collectCoverageFrom": [
      "<rootDir>/packages/**/*.js"
    ],
    "setupFiles": [],
    "testMatch": [
      "<rootDir>/**/__tests__/**/*.js?(x)"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/files/",
      "/fixtures/",
      "/packages-old/"
    ],
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "snapshotSerializers": []
  }
}
